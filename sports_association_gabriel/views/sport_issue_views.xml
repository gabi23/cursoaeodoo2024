<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="sport_issue_view_tree" model="ir.ui.view">
    <field name="name">sport_issue.view.tree</field>
    <field name="model">sport.issue</field>
    <field name="arch" type="xml">
        <tree string="Issues" multi_edit="1">
            <field name="sequence" widget="handle"/>
            <field name="name"/>
            <field name="date" optional="show"/>
            <field name="user_id" optional="hide"/>
            <field name="state" widget="badge"/>
        </tree>
    </field>
</record>

<record id="sport_issue_view_form" model="ir.ui.view">
    <field name="name">sport_issue.view.form</field>
    <field name="model">sport.issue</field>
    <field name="arch" type="xml">
        <form string="Issues">
            <header>
                <field name="state" options="{'clickable':'1'}" widget="statusbar" statusbar_visible="draft,open,done"/>
                <button string="To open" invisible="state not in ('draft')" name="action_open" type="object" class="oe_highlight"/>
                <button string="To draft" invisible="state not in ('open')" name="action_draft" type="object" class="oe_highlight"/>
                <button string="Done" invisible="state not in ('open')" name="action_done" type="object" class="oe_highlight"/>
            </header>
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Issue Name"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="user_id"/>
                        <field name="clinic_id"/>
                    </group>
                    <group>
                        <field name="date"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="assistance" widget="boolean_toggle"/>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"></field>
                        </page>
                        <page name="solution" string="Solution">
                            <field name="solution"></field>
                        </page>
                    </notebook>                    
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="action_sport_issue" model="ir.actions.act_window">
    <field name="name">Sport Issue</field>
    <field name="res_model">sport.issue</field>
    <field name="view_mode">tree,form,kanban</field>
    <!--<field name="domain">[]</field>-->
    <field name="context">{}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create a new sport issue
        </p>
    </field>
</record>

</odoo>
